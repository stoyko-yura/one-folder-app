{
  "extends": "@one-folder-app/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["*"],
      "@/root/*": ["*"],
      "@/config/*": ["config/*"],
      "@/libs/*": ["libs/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["src", ".eslintrc.cjs"],
  "exclude": ["dist", "node_modules"]
}
